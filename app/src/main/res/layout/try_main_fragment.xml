<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_gravity="center"
    android:gravity="center">

    <Button
        android:id="@+id/appTryMinusBottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:text="@string/app_try_minus_button"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/appTryZeroText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_try_zero_text"
        android:textSize="60sp"
        android:gravity="center"/>

    <Button
        android:id="@+id/appTryPlusBottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="@string/app_try_plus_button"
        android:textSize="20sp"/>
</LinearLayout>