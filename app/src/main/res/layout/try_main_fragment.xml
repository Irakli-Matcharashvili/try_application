<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_gravity="center"
    android:gravity="center"
    xmlns:tools="http://schemas.android.com/tools">

    <Button
        android:id="@+id/tryApplicationButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/app_try_button"
        android:visibility="gone"
        tools:visibility="visible"/>

    <Button
        android:id="@+id/appTryMinusBottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:text="@string/app_try_minus_button"
        android:textSize="@dimen/dimen_sp_20"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/appTryZeroText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_try_zero_text"
        android:textSize="60sp"
        android:gravity="center"
        android:visibility="gone"/>

    <Button
        android:id="@+id/appTryPlusBottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_p_20"
        android:text="@string/app_try_plus_button"
        android:textSize="20sp"
        android:visibility="gone"/>
</LinearLayout>